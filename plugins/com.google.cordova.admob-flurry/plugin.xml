<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android"
	id="com.google.cordova.admob-flurry"
	version="5.4.0">
      
    <name>AdMob Mediation Adapter for Flurry Ads</name>
	<description>AdMob Mediation Adapter for Flurry Ads</description>
	<keywords>admob,flurry,mediation</keywords>
    <repo>https://github.com/floatinghotpot/cordova-admob-pro.git</repo>
    <issue>https://github.com/floatinghotpot/cordova-admob-pro/issues</issue>

	<engines>
	    <engine name="cordova" version=">=3.0" />
	</engines>

    <dependency id="com.google.cordova.admob"/>
    <dependency id="com.rjfun.cordova.flurryads"/>
    
    <platform name="android">
        <source-file src="FlurryDFPAdapter-4.0.0.r1.jar" target-dir="libs" />
     </platform>

     <platform name="ios">    
          <source-file src="libFlurryDFPAdapter_5.4.0.r1.a" framework="true"/>
	</platform>

</plugin>
